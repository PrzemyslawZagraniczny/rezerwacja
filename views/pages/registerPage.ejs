<div class="wrap-login100 ">
    <form class="form-horizontal login100-form" method="post" action="/rejestracja">
        <div class="form-group specjalna_czcionka">
            <div class="col-xs-12 text-center">
                    <br><span class="login100-form-title" ><h1 id="rejestracja">Rejestracja</h1></span><hr class="style1"> <br><br>
                </div>
            <div class="form-group">
                <div class="col-md-8 col-xs-offset-2"><input class="form-control" name="email" placeholder="Email" value="" id="email" type="email"maxlength="80" required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8 col-xs-offset-2"><input class="form-control" name="nickname" placeholder="Nick Name" value="" id="nick" type="text" maxlength="25" required>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8 col-xs-offset-2"><input class="form-control" name="password" placeholder="Passowrd" value="" id="pass" type="password" required>
                </div>
            </div>
        </div>
        <br>

        <div class="form-group">
            <div class="col-md-7 col-xs-offset-3">
                <div class="container-login-form-btn">
                    <button class="login-form-btn" data-loading-text="Rejestruje..." type="submit" value="Dodaj użytkownika" id="btRegister">
                        Zarejestruj się
                    </button>
                </div>
            </div>
        </div>    
    </form>

    <div class="form-group">

        <br><br>
        <div class="text-center">
            <a href="/login" id="create_account" class="txt2 hov1">
                Zaloguj się
            </a>
        </div>
    </div>
</div>